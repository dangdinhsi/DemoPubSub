<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <servlet>
        <servlet-name>PublisherDemo</servlet-name>
        <servlet-class>pubsub.PublisherDemo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PublisherDemo</servlet-name>
        <url-pattern>/pub</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SubscriberDemo</servlet-name>
        <servlet-class>pubsub.SubscriberDemo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubscriberDemo</servlet-name>
        <url-pattern>/sub</url-pattern>
    </servlet-mapping>
</web-app>